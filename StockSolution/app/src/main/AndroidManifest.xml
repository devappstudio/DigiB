<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.codehouse.stocksolution">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <permission
        android:name="io.codehouse.stocksolution.Services.SyncService"
        android:protectionLevel="signature" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".AppController.AppController"
        android:theme="@style/AppTheme">


        <service
            android:name=".Services.SyncService"
            android:process=":my_service" />

        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Register" />
        <activity android:name=".Login" />
        <activity android:name=".Home"
            android:launchMode="singleTop"
            >

        </activity>

        <activity android:name=".Stores" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Home" />
        </activity>

        <activity android:name=".Products" />
        <activity android:name=".ProductCategories" />
        <activity android:name=".StockSessions" />
        <activity android:name=".StockDetails"></activity>
    </application>

</manifest>