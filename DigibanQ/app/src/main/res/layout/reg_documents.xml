<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F5F8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/imgContainer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="#fff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Add Recent Photo Here"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#757584"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/upload_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/icon_camera"
            android:background="#fff"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/upDocs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imgContainer">

        <TextView
            android:id="@+id/docInstructTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logoImg"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:text="And now add your"/>

        <TextView
            android:id="@+id/docInstructText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="SUPPORTING DOCUMENTS"
            android:textColor="@color/colorPrimary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/upload_bs_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:textColor="@color/timestamp"
                android:text="Upload"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/windowBackground"
                android:layout_margin="10dp"
                android:inputType="text"
                android:hint="Bank Statement 1"
                android:textColorHint="#757584"
                android:textColor="#757584"
                android:id="@+id/docOne"
                android:textSize="14dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/upload_bs_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:textColor="@color/timestamp"
                android:text="Upload"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/windowBackground"
                android:layout_margin="10dp"
                android:inputType="text"
                android:hint="Bank Statement 2"
                android:textColorHint="#757584"
                android:textColor="#757584"
                android:id="@+id/docTwo"
                android:textSize="14dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/upload_ps_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:textColor="@color/timestamp"
                android:text="Upload"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/windowBackground"
                android:layout_margin="10dp"
                android:inputType="text"
                android:hint="Pay Slip 1"
                android:textColorHint="#757584"
                android:textColor="#757584"
                android:id="@+id/paySlipOne"
                android:textSize="14dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/upload_ps_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:textColor="@color/timestamp"
                android:text="Upload"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/windowBackground"
                android:layout_margin="10dp"
                android:inputType="text"
                android:hint="Pay Slip 2"
                android:textColorHint="#757584"
                android:textColor="#757584"
                android:id="@+id/paySlipTwo"
                android:textSize="14dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/upload_ps_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:textColor="@color/timestamp"
                android:text="Upload"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/windowBackground"
                android:layout_margin="10dp"
                android:inputType="text"
                android:hint="Pay Slip 3"
                android:textColorHint="#757584"
                android:textColor="#757584"
                android:id="@+id/paySlipThree"
                android:textSize="14dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/upload_idCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:textColor="@color/timestamp"
                android:text="Upload"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/windowBackground"
                android:layout_margin="10dp"
                android:inputType="text"
                android:hint="Identity Card"
                android:textColorHint="#757584"
                android:textColor="#757584"
                android:id="@+id/idCard"
                android:textSize="14dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/upload_empCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:textColor="@color/timestamp"
                android:text="Upload"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/windowBackground"
                android:layout_margin="10dp"
                android:inputType="text"
                android:hint="Employment Contract"
                android:textColorHint="#757584"
                android:textColor="#757584"
                android:id="@+id/empCard"
                android:textSize="14dp" />

        </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/action_btn"
            android:layout_below="@+id/upDocs"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/bg_screen3"
                android:drawableLeft="@drawable/ic_arrow_back_white"
                android:text="Back"
                android:textSize="16dp"
                android:textColor="#fff"
                android:id="@+id/btn_back" />

            <Button
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button_selector"
                android:textColor="#ffffff"
                android:text="Continue"
                android:textSize="16dp"
                android:id="@+id/btn_cont" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>