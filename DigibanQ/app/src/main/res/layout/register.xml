<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#F1F5F8">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F5F8">

    <TextView
        android:id="@+id/InstructTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Enter Your Details To Begin"
        android:textColor="#757584"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/InstructText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="You will need your mobile number and password everytime you login to your account."
        android:textColor="#757584"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="@dimen/logo_width_height"
        android:layout_height="@dimen/logo_width_height"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/InstructText"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
        android:layout_below="@+id/logoImg"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@color/windowBackground"
                android:layout_margin="10dp"
                android:inputType="text"
                android:textColorHint="#757584"
                android:drawableLeft="@drawable/user"
                android:hint="Full Name"
                android:textColor="#757584"
                android:id="@+id/accType"
                android:textSize="12dp"
                android:textIsSelectable="false" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="@color/windowBackground"
            android:layout_margin="10dp"
            android:inputType="textPassword"
            android:textColorHint="#757584"
            android:drawableLeft="@drawable/ic_lock_black"
            android:drawableRight="@drawable/ic_remove_red_eye"
            android:hint="Password"
            android:textColor="#757584"
            android:id="@+id/pass"
            android:textSize="12dp"
            android:textIsSelectable="false" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="more than 6 characters"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:textColor="#757584"
            android:layout_marginBottom="20dp"
            android:textSize="12dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@color/windowBackground"
                android:layout_margin="10dp"
                android:inputType="phone"
                android:hint="Phone Number"
                android:textColorHint="#757584"
                android:drawableLeft="@drawable/ic_local_phone_black"
                android:textColor="#757584"
                android:digits="0123456789+"
                android:id="@+id/phone"
                android:textSize="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="add your country code at the begining (Eg. +233)"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:textColor="#757584"
            android:layout_marginBottom="10dp"
            android:textSize="12dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@color/windowBackground"
                android:layout_margin="10dp"
                android:inputType="text"
                android:hint="Email Address"
                android:textColorHint="#757584"
                android:drawableLeft="@drawable/email"
                android:textColor="#757584"
                android:id="@+id/email"
                android:textSize="12dp"
                android:textIsSelectable="false" />


    <LinearLayout
        android:id="@+id/action_btn"
        android:layout_below="@+id/inputs"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#fff"
            android:drawableLeft="@drawable/ic_arrow_back_black"
            android:text="Back"
            android:textColor="#757584"
            android:id="@+id/btn_back" />

            <Button
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button_selector"
                android:textColor="#ffffff"
                android:text="Continue"
                android:id="@+id/btn_cont" />
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
</ScrollView>